<div class="query-form" phx-click="lv:clear-flash" >
  <div phx-click="lv:clear-flash">
    <p><%= live_flash(@flash, :info) %></p>
    <p><%= live_flash(@flash, :error) %></p>
  </div>
  <%= f = form_for @changeset,
          "#",
          [phx_change: :validate, phx_submit: :save] %>

    <%= text_input f, :name, phx_debounce: "blur", class: "query-form__name" %>
    <%= error_tag f, :name %>

    <%= textarea f, :query, phx_debounce: 500, class: "query-form__textarea" %>
    <%= error_tag f, :query %>

    <div class="query-form__actions">
      <button class="mdc-icon-button material-icons query-form__action-button">rowing</button>
      <%= submit "save", class: "mdc-icon-button material-icons query-form__action-button" %>
    </div>
  </form>

  <div class="fab fab__left">
    <div class="mdc-fab__ripple">
      <%= live_patch "arrow_back", to: Routes.live_path(@socket, QueryLive.Index), class: "mdc-fab mdc-fab__icon material-icons" %>
    </div>
  </div>
</div>
